{
	"name": "Ryft",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"check-types": "turbo run check-types",
		"kill-ports": "kill-port 3000 8080",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"husky": "^9.1.7",
		"kill-port": "^2.0.1",
		"lint-staged": "^16.1.5",
		"turbo": "^2.5.6",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.20",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"lint-staged": {
		"*.{ts,tsx,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
