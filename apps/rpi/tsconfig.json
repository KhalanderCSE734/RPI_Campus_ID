{
	"extends": "@ryft/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"baseUrl": ".",
	"paths": {
		"@ryft/rpi/*": ["./*"],
		"@ryft/ui/*": ["../../packages/ui/src/*"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.js",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
